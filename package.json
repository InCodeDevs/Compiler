{
  "name": "@incodelang/compiler",
  "version": "0.0.1",
  "description": "The new compiler for the InCode Programming Language",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "test": "yarn build && node dist/test/index.js",
    "bundle": "yarn clean && yarn build && yarn bundle:esm && yarn bundle:umd && yarn minify:esm && yarn minify:umd",
    "bundle:esm": "rollup dist/index.js --file bundles/incode.compiler.mjs --format esm -c rollup.config.js",
    "bundle:umd": "rollup dist/index.js --file bundles/incode.compiler.umd.js --format umd --name InCode -c rollup.config.js",
    "minify:esm": "uglifyjs bundles/incode.compiler.mjs --compress --v8 --webkit --no-rename --keep-fnames --output bundles/incode.compiler.min.mjs",
    "minify:umd": "uglifyjs bundles/incode.compiler.umd.js --compress --v8 --webkit --no-rename --keep-fnames --output bundles/incode.compiler.min.umd.js",
    "clean": "del-cli --force dist && del-cli --force bundles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InCodeDevs/Compiler.git"
  },
  "keywords": [
    "InCode",
    "Programming",
    "Compiler"
  ],
  "author": "The InCode Developers",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/InCodeDevs/Compiler/issues"
  },
  "homepage": "https://github.com/InCodeDevs/Compiler#readme",
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/node": "^16.11.10",
    "chalk": "^4.0.0",
    "commander": "^8.3.0",
    "copyfiles": "^2.4.1",
    "typescript": "^4.5.2",
    "yarn": "^1.22.17"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "del-cli": "^4.0.1",
    "prettier": "^2.4.1",
    "rollup": "^2.60.2",
    "uglify-js": "^3.14.3"
  }
}
